<% if error_messages.present? %>
  <%
=begin%>
 <ul class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
    <% error_messages.each do |error| %>
      <li class="mb-2"><%= "#{error.message}" %></li>
    <% end %>
  </ul> 
<%
=end%>
<% end %>
<% if nested_errors.present? %>
  <ul class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
    <% nested_errors.each do |nested_error| %>
      <% nested_error.each do |attribute, message| %>
        <li class="mb-2"><%= "#{message}" %></li>
      <% end %>
    <% end %>
  </ul>
<% end %>

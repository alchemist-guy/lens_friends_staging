              <div>
                <%= form_with(url: book_request_communication_path, method: :post, local: true, class: 'mt-6', html: {data: {turbo: "false"}}) do |form| %>
                  <%= form.hidden_field :seller_id, value: @seller.id %>

                  <button class="py-4 px-10 font-semibold rounded-full focus:ring focus:ring-[#d6dacc] bg-[#9c9e83] hover:bg-[#d6dacc] text-white transition ease-in-out duration-200" type="submit">Email Professional</button>

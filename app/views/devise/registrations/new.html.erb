<% if params[:role] == "client" || (params[:user] && params[:user][:is_client]) %>
  <%= render "devise/registrations/client_new" %>
<% elsif params[:role] == "creator" || (params[:user] && params[:user][:is_creator]) %>
  <%= render "devise/registrations/creator_new" %>
<% end %>




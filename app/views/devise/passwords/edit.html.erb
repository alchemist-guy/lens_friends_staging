<%
=begin%>
 <h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %> 
<%
=end%>



<div class="container mx-auto">
  <div class="flex justify-center items-center h-screen px-6">
    <div class="w-full xl:w-3/4 lg:w-11/12 flex">
      
      <div class="w-full lg:w-1/2 bg-white p-5 rounded-lg lg:rounded-l-none">
        <div class="md:px-8 mb-4 text-center">
          <h2 class="text-2xl md:text-3xl pt-4 pb-8 text-center"> Reset your Password? </h2>
          <p class="mb-4 text-sm text-gray-700">
            Enter your new password to reset the password on your account. We'll ask for this password whenever you log in.
          </p>
        </div>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <div class="md:px-8 pt-6 pb-8 mb-4 bg-white rounded">
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          <div class="relative mb-3 float-label-input">
            <%= f.password_field :password,
                     id: 'pass',
                     placeholder: '',
                     class: 'block w-full bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded-md py-3 px-3 appearance-none leading-normal focus:border-gray-400',
                     required: true %>
            <label for="pass" class="absolute top-3 left-1 text-gray-400 pointer-events-none transition duration-200 ease-in-out bg-white px-2 text-grey-darker"> New Password </label>
          </div>
          <div class="relative mb-3 float-label-input">
            <%= f.password_field :password_confirmation,
                     id: 'pass2',
                     placeholder: '',
                     class: 'block w-full bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded-md py-3 px-3 appearance-none leading-normal focus:border-gray-400',
                     required: true %>
            <label for="pass2" class="absolute top-3 left-1 text-gray-400 pointer-events-none transition duration-200 ease-in-out bg-white px-2 text-grey-darker"> Confirm new Password </label>
          </div>

          <div class="mb-6">
            <input type="submit" value="Reset Password" class="block w-full focus:outline-none focus:shadow-outline border border-gray-300 py-3 px-3 appearance-none leading-normal focus:border-gray-400    rounded-full bg-[#d6dacc] hover:bg-[#9c9e83] hover:text-white">
          </div>
          <hr class="mb-6 border-t" />
            <h6 class="text-center text-gray-700">
              <span>Know your password?</span>
              <a class="hover:border-b border-current pb-1" href="<%= new_user_session_path( role: "client" )%>"> log in</a>
            </h6>
        </div>
        <% end %>
      </div>

      <div class="w-full h-auto bg-gray-400 hidden lg:block lg:w-1/2 rounded-l-lg overflow-hidden">
        <%= image_tag('login-screen.jpg', class: 'object-cover w-full h-full') %>
      </div>
        
    </div>
  </div>
</div>